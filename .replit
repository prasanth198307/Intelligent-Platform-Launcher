modules = ["nodejs-20"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true
integrations = ["javascript_anthropic_ai_integrations:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "IPL Platform"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Generator Service"

[[workflows.workflow]]
name = "IPL Platform"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ipl-platform/apps/ui-console && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "AI Generator Service"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ipl-platform/apps/ai-generator-service && npm run dev"
waitForPort = 8080

[[ports]]
localPort = 3000
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[userenv]

[userenv.shared]
LLM_PROVIDER = "groq"
